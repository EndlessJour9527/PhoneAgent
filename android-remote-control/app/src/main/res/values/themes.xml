<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - 保持 Light 主题（Remote App 的设计标准）-->
    <style name="Base.Theme.PhoneAgentRemote" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        
        <!-- Background - 关键：设置 windowBackground -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        
        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar - 简化设置 -->
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="Theme.PhoneAgentRemote" parent="Base.Theme.PhoneAgentRemote" />
    
    <!-- No ActionBar Theme (for WebView) -->
    <style name="Theme.PhoneAgentRemote.NoActionBar" parent="Theme.PhoneAgentRemote">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Toolbar Theme -->
    <style name="Theme.PhoneAgentRemote.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:background">@color/primary</item>
    </style>
    
    <!-- Card Theme -->
    <style name="Theme.PhoneAgentRemote.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>
    
    <!-- Button Themes -->
    <style name="Theme.PhoneAgentRemote.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>
    
    <style name="Theme.PhoneAgentRemote.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.PhoneAgentRemote.H1" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.PhoneAgentRemote.H2" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.PhoneAgentRemote.H3" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.PhoneAgentRemote.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.PhoneAgentRemote.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
