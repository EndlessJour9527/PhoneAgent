<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:theme="@style/Theme.PhoneAgentRemote.Toolbar"
        app:title="PhoneAgent Remote - 应用日志"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- 工具栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_small"
        android:background="@color/surface"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_refresh"
            style="@style/Theme.PhoneAgentRemote.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_small"
            android:text="刷新"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_clear"
            style="@style/Theme.PhoneAgentRemote.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="清空"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 日志级别选择 -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_small"
        android:background="@color/surface"
        app:singleSelection="false"
        app:chipSpacingHorizontal="@dimen/spacing_small">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug"
            android:checked="true"
            style="@style/Widget.Material3.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info"
            android:checked="true"
            style="@style/Widget.Material3.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warning"
            android:checked="true"
            style="@style/Widget.Material3.Chip.Filter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error"
            android:checked="true"
            style="@style/Widget.Material3.Chip.Filter" />
    </com.google.android.material.chip.ChipGroup>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <!-- 日志内容 -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_medium">

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textSize="11sp"
            android:textColor="@color/text_primary"
            android:lineSpacingMultiplier="1.2"
            android:text="加载中..." />
    </ScrollView>

    <!-- 底部信息栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_small"
        android:background="@color/surface"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_line_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="总计: 0 行"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/tv_auto_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动滚动: 开启"
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/spacing_xs" />
    </LinearLayout>

</LinearLayout>

